        <VBox alignment="CENTER" spacing="20.0">
            <Label style="-fx-font-size: 24pt;" text="Liste des utilisateurs" />
            <TableView fx:id="userTable" prefHeight="400.0" prefWidth="817.0" style="-fx-font-size: 14pt;">
                
